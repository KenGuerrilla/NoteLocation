<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <item
        android:top="-2sp"
        android:right="-2sp"
        android:left="-2sp"
        android:bottom="2sp">

        <shape android:shape="rectangle" >

            <stroke android:width="1sp"
                android:color="@android:color/darker_gray"/>

            <padding
                android:bottom="@dimen/list_item_padding_bottom"
                android:left="@dimen/list_item_padding_left"
                android:right="@dimen/list_item_padding_top_right"
                android:top="@dimen/list_item_padding_top_right"
                />

        </shape>

    </item>

</layer-list>